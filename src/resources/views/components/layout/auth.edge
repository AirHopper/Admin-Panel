  </script>
  
  <script>

    function showToast(type, title, text) {
        Swal.fire({
            title: title,
            text: text,
            icon: type,
            toast: true,
            position: 'top-end',
            showConfirmButton: false,
            timer: 3000,
            timerProgressBar: true,
            didOpen: (toast) => {
                toast.addEventListener('mouseenter', Swal.stopTimer);
                toast.addEventListener('mouseleave', Swal.resumeTimer);
            }
        });
    }

    new DataTable('.myTable');
  </script>

</body>

